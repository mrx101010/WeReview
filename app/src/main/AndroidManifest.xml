<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wereview">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui._intro.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui._edit_profil.EditActivity"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui._detail_feed.DetailActivity"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui._fragment.ActivityAdd"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ui._feed.Feed"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".ui._chatroom.ActivityChatroom"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui._subpost.SubGenre"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui._login.login"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui._register.register"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui._intro.OnboardActivity"
            android:theme="@style/AppTheme.Fullscreen"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

    </application>
</manifest>